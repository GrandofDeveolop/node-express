extends layout/base

block head
    title= title
script

block body
    nav.navbar.navbar-inverse
        div.container-fluid
            div.navbar-header
                button(type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar")
                    span.icon-bar
                    span.icon-bar
                    span.icon-bar
                a.navbar-brand(href="#") #{i18n.__("Logo")}
            div#myNavbar.collapse.navbar-collapse
                ul.nav.navbar-nav
                    li
                        a(onclick="direct_url('/')") #{i18n.__("Home")}
                    if (!user)
                       li#login
                          a(onclick="direct_url('/login')") login
                       li#signup
                          a(onclick="direct_url('/signup')") signup
                    if(user)
                       li#logout
                          a(href="/logout") log out
                form.navbar-form.navbar-right(role="search")
                    div.form-group.input-group
                        input.form-control(type="text" placeholder="...")
                        span.input-group-btn
                            button.btn.btn-default(type="button")
                                span.glyphicon.glyphicon-search
                ul.nav.navbar-nav.navbar-right
                    li(style='top:10px;')
                        button(onclick="replace_language('?lang=EN')") EN
                    li(style='top:10px;')
                        button(onclick="replace_language('?lang=DK')") DK
                ul.nav.navbar-nav.navbar-right
                   li.active
                      a(href="#")
                         span.glyphicon.glyphicon-user
                         |  #{i18n.__("My account")}
    div
        .container
            .col-sm-6.col-sm-offset-3
                h1
                    span.fa.fa-sign-in
                     if(user)
                        p #{i18n.__("You are currently logged in as")} #{user.username}

