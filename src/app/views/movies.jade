extends layout/base

block head
  title= title

block body
  nav.navbar.navbar-inverse
    div.container-fluid
      div.navbar-header
        button(type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar")
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand(href="#") #{i18n.__("Logo")}
      div#myNavbar.collapse.navbar-collapse
        ul.nav.navbar-nav
          li.active
            a(href="/movies") #{i18n.__("Movies")}
          li
            a(href="/extraes") #{i18n.__("Extra")}
          li
            a(href="/") #{i18n.__("Home")}
        ul.nav.navbar-nav.navbar-right.text-center
          li(style='top:10px;')
            button(onclick="replace_language('?lang=EN')") EN
          li(style='top:10px;')
            button(onclick="replace_language('?lang=DK')") DK
        form.navbar-form.navbar-right(role="search")
          div.form-group.input-group
            input(type="text").form-control(placeholder="...")
            span.input-group-btn
              button.btn.btn-default(type="button")
                span.glyphicon.glyphicon-search
        ul.nav.navbar-nav.navbar-right
          li(style='top:10px;')
            button(onclick="replace_language('?lang=EN')") EN
          li(style='top:10px;')
            button(onclick="replace_language('?lang=DK')") DK
        ul.nav.navbar-nav.navbar-right
          li
            a(href="#")
              span.glyphicon.glyphicon-user
              |  #{i18n.__("My account")}
  div.row
    div.col-lg-6.col-lg-offset-3.text-center
      h1
        | #{i18n.__("Movies")}!


